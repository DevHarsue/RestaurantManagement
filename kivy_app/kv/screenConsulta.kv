#: import ScreenConsulta kivy_app.screens.screenConsulta.ScreenConsulta

<ScreenConsulta>:
    MDGridLayout:
        id: contenedor_consulta
        cols: 1
        size_hint: (1,1)
        opacity: 1
        MDLabel:
            size_hint_x: 1
            adaptive_height: True
            padding: "20dp"
            font_style: "Title"
            rol: "large"
            text: 'PLATOS MESA'
            halign: 'center'
            bold: True
        MDScrollView:
            size_hint_y: 1
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                id: lista_platos_consulta
        MDGridLayout:
            padding: "5dp"
            cols: 3
            adaptive_height: True
            TotalMDLabel:
                adaptive_height: True
                size_hint_x: 1
                halign: 'center'
                id: label_dolar
                text: f'TOTAL DOLAR: {self.total}'
            TotalMDLabel:
                adaptive_height: True
                size_hint_x: 1
                halign: 'center'
                id: label_cop
                text: f'TOTAL COP: {self.total}'
            TotalMDLabel:
                adaptive_height: True
                size_hint_x: 1
                halign: 'center'
                id: label_bs
                text: f'TOTAL BS: {self.total}'
        MDAnchorLayout:
            size_hint_y: None
            height: boton_consulta.height+(boton_consulta.height*0.1)
            CustomButton:
                id: boton_consulta
                type: 'tonal'
                icon: "check-all"
                text: "FINALIZAR"
                on_release: root.cambiar_screen("MESAS")
    MDFloatLayout:
        id: contenedor_carga
