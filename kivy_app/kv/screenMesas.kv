#: import ScreenMesas kivy_app.screens.screenMesas.ScreenMesas

<ScreenMesas>:
    MDGridLayout:
        cols: 1
        MDScrollView:
            size_hint_y: 1
            do_scroll_x: False
            do_scroll_y: True
            MDGridLayout:
                id: grid_mesas
                cols: 2
                adaptive_height: True
                padding: "30dp"
                size_hint_x: 1
                spacing: "30dp"
    MDRelativeLayout:
        MDIconButton:
            icon: "reload"
            style: "standard"
            pos_hint: {"right":1,"top":1}
            on_release: root.cargar()
    MDFloatLayout:
        id: contenedor_carga
        opacity: 0
