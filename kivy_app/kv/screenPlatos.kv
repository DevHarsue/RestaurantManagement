#: import ScreenPlatos kivy_app.screens.screenPlatos.ScreenPlatos

<ScreenPlatos>:
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: (1,1)
        MDBoxLayout:
            spacing: "12dp"
            padding: "15dp"
            adaptive_height: True
            CustomButton:
                id: boton_menu_tipos_platos
                pos_hint: {"center_y":.5}
                on_release: root.abir_menu_tipos_platos()
                icon: "filter-outline"
                type: 'tonal'
                text: 'Filtrar por:'
            MDChip:
                pos_hint: {"center_y":.5}
                disabled: True
                MDChipLeadingIcon:
                    icon: "check-all"
                MDChipText:
                    id: chip_text_filtrado
                    text: 'TODO'
            MDRelativeLayout:
                MDIconButton:
                    icon: "reload"
                    style: "standard"
                    pos_hint: {"right":1}
                    on_release: root.cargar()
        MDScrollView:
            size_hint_y: 1
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                size_hint_y: 1
                id: lista_platos
                # PlatoSeleccionarMDListItem:
                #     icon: "food-drumstick-outline"
                #     nombre: "Carne"
                #     descripcion: "Carne ratata"
                #     precio: 12
