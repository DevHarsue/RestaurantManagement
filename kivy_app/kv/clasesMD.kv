#: import * kivy_app.widgets.clasesMD

<BarraNavegacion@MDNavigationBar>:
    on_switch_tabs: app.cambiar_screen(*args)
    BaseMDNavigationItem:
        id: boton_ORDEN
        icon: "order-bool-ascending-variant"
        text: "ORDEN"
        active: True
    BaseMDNavigationItem:
        id: boton_MESAS
        icon: "table"
        text: "MESAS"
    BaseMDNavigationItem:
        id: boton_PLATOS
        icon: "silverware-variant"
        text: "PLATOS"
    BaseMDNavigationItem:
        id: boton_AJUSTES
        icon: "cog-outline"
        text: "AJUSTES"

<BaseMDNavigationItem>:
    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

<PlatoPadreMDListItem>
    MDListItemLeadingIcon:
        icon: root.icon

<PlatosSeleccionadoMDListItem>:
    on_release: app.contenedor.ids.screen_orden.mostrar_dialog("eliminar",self)
    MDListItemHeadlineText:
        text: f"{root.nombre} x{root.cantidad}"
    MDListItemSupportingText:
        text: root.descripcion
    MDListItemTertiaryText:
        text: f'Total: {root.precio*root.cantidad}$'

<PlatosListaMDListItem>:
    MDListItemHeadlineText:
        text: f"{root.nombre} x{root.cantidad}"
    MDListItemSupportingText:
        text: root.descripcion
    MDListItemTertiaryText:
        text: f'Total: {root.precio*root.cantidad}$'

<PlatoSeleccionarMDListItem>:
    on_release: app.contenedor.ids.screen_orden.mostrar_dialog("agregar",self)
    MDListItemHeadlineText:
        text: root.nombre
    MDListItemSupportingText:
        text: root.descripcion
    MDListItemTertiaryText:
        text: f'Precio: {root.precio}$'

<TotalMDLabel>:
    padding: "10dp"

<LabelTitle@MDLabel>:
    bold: True
    adaptive_height: True
    size_hint_y: None
    halign: 'center'
    valign: 'top'
    font_style: 'Title'
    role: "medium"

<LabelTotalFinOrden>:
    adaptive_height: True

<Mesa>:
    padding: "4dp"
    style: "outlined"
    on_release: app.contenedor.ids.screen_mesas.mostrar_dialog_mesa(self)
    size_hint_y: None
    height: "120dp"
    MDRelativeLayout:
        size_hint_y: 1
        Image:
            source: "assets/table.png" if root.libre else "assets/table-ocupada.png"
            size_hint_y: .65
            pos_hint: {"top": 1}
            radius: "36dp", "36dp", 0, 0
        MDLabel:
            text: root.text
            adaptive_size: True
            font_style: 'Title'
            role: "large"
            pos_hint: {"center_x":.5,"center_y":.25}
            bold: True


<CustomTextField>:
    mode: "filled"
    input_filter: 'int'
    text: '1'
    MDTextFieldLeadingIcon:
        icon: "numeric"

    MDTextFieldHintText:
        text: "CANTIDAD"

    MDTextFieldHelperText:
        text: "Cantidad de platos"
        mode: "persistent"

    MDTextFieldMaxLengthText:
        max_text_length: 10

<CustomButton>:
    MDButtonIcon:
        icon: root.icon
    MDButtonText:
        text: root.text

<BoxReintentar>:
    orientation: 'vertical'
    MDAnchorLayout:
        MDLabel:
            text:"Error de Conexi√≥n"
            size_hint:(1,1)
            halign:"center"
            valign:"center"
    MDAnchorLayout:
        CustomButton:
            size_hint:(1,1)
            halign:"center"
            valign:"center"
            icon: "reload"
            text: "Reintentar"
            on_release: app.contenedor.ids.screen_fin_orden.reintentar()
