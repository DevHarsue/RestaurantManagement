<ScreenMesas>:
    MDGridLayout:
        cols: 1
        MDRelativeLayout:
            size_hint_x: 1
            adaptive_height: True
            height: "70dp"
            MDTopAppBar:
                style: "small"
                pos_hint: {"right":1}
                MDTopAppBarTrailingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: "reload"
                        on_release: root.cargar_mesas()
        MDScrollView:
            MDGridLayout:
                id: grid_mesas
                padding: "30dp"
                cols: 1
                size_hint: (1,1)
                spacing: "30dp"
